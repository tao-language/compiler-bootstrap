# Generalized Algebraic Data Type (GADT)

type Box a (x : a)
  = IntBox : (i : Int) -> Box Int i
  | NumBox : (n : Num) -> Box Num n

unbox : Box a x -> a
unbox _ = x

> unbox (IntBox 42)    # 42
> unbox (NumBox 3.14)  # 3.14

type Vec n a
  = (::) : a -> Vec n a -> Vec (n + 1) a
  | [] : Vec 0 a

length : Vec n a -> Int
length _ = n

> length [0, 0, 0]  # 3
