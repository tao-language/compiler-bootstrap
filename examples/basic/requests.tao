type Result a err = Ok a | Err err

(:=) : (a -> Result b err) -> Result a err -> Result b err
(:=) f (Ok x) = f x
(:=) f (Err e) = Err e

type RequestException
  = ConnectionError
  | HTTPError
  | Timeout
  | TooManyRedirects

Response = {
  text: String,
  status: Int,
}

@get : String -> Result Response RequestErrors

